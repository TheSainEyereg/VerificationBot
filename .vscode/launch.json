	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Dev Debug",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}\\src\\app"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Prod Debug",
			"skipFiles": [
				"<node_internals>/**"
			],
			"env": {
				"NODE_ENV": "production"
			},
			"program": "${workspaceFolder}\\src\\app"
		}
	]
}